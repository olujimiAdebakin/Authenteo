# =============== APP CONFIG ==================
APP_NAME=Authentio
APP_VERSION=1.0.0
APP_ENV=development
BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:5173
SERVER_PORT=8080

# =============== SECURITY ====================
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_SECRET
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=168h
BCRYPT_COST=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# =============== DATABASE ====================
POSTGRES_DSN=postgres://postgres:secret@localhost:5432/authentio_db?sslmode=disable
DATABASE_URL=postgres://postgres:secret@db:5432/authentio_db?sslmode=disable
REDIS_ADDR=localhost:6379
REDIS_PASS=

# =============== GOOGLE OAUTH ================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/google/callback

# =============== EMAIL =======================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@authentio.com

# =============== COUNTRY RULES ===============
BLOCKED_COUNTRIES=US,CA,GB,FR,SY,CU,VE,BY,MM
SUSPICIOUS_COUNTRIES=CN,RU,KP,IR,SY,CU,VE,BY,MM,PK,NG
ALLOWED_COUNTRIES=CN,RU,KP,IR,DE,IT,ES,PT,NL,BE,CH,SE,NO,DK,FI,AU,NZ,JP,KR,SG
IPAPI_URL=http://ip-api.com/json/

# =============== LOGGING =====================
LOG_LEVEL=debug
ENABLE_REQUEST_LOGS=true


CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000